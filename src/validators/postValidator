const { checkSchema } = require("express-validator");

module.exports = {
  create: checkSchema({
    title: {
      isLength: {
        options: { min: 3 },
        errorMessage: "O t√≠tulo deve ter pelo menos 3 caracteres",
      },
      trim: true,
    },
    content: {
      isLength: {
        options: { min: 3 },
        errorMessage: "O texto deve ter pelo menos 3 caracteres",
      },
      trim: true,
    },
   
  
  }),
};